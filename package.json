{
  "name": "opal",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "consumer:build": "cd apps/consumer && tsc -b && cd ../../",
    "consumer:start": "cd apps/consumer && node dist/index.js",
    "transcoder:build": "cd apps/transcode && tsc -b && cd ../../",
    "transcoder:start": "cd apps/transcode && node dist/index.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
